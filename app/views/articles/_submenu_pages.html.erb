<ul>
  <% pages.each do |page, children| %>
    <li>
      <%= link_to_unless_current page.name, page %>
      <%= link_to 'E', edit_article_path(page) %>|
      <%= link_to 'X', article_path(page), :method=>:delete %>
      <%= render 'submenu_pages', pages: children if children.present? %>
    </li>
  <% end %>
</ul>
